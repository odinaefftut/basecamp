<br>
<p align='center' style="color: green"><%= notice %></p>
<h1 class="text-center text-3xl font-semibold mb-4">Projects</h1>

<div id="projects" class="flex flex-wrap">
  <% @projects.each do |project| %>
    <div class="w-full md:w-1/2 lg:w-1/3 p-4">
      <div class="bg-white rounded-lg shadow-lg p-6 h-full">
        <h2 class="text-xl font-semibold mb-2"><%= project.name %></h2>
        <p class="text-gray-600 mb-4"><%= project.description %></p>
        <p>
          <%= link_to "Show this project", project, class: "text-blue-500 hover:text-blue-600 font-semibold" %>
        </p>
      </div>
    </div>
  <% end %>
</div>

