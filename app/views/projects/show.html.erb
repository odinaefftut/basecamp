<p class="text-green-500 mb-4"><%= notice %></p>

<div class="bg-white rounded-lg shadow-lg p-6 mb-4">
  <h2 class="text-xl font-semibold mb-2"><%= @project.name %></h2>
  <p class="text-gray-600 mb-4"><%= @project.description %></p>

  <div class="flex justify-between items-center">
    <div>
      <%= link_to "Edit this project", edit_project_path(@project), class: "text-blue-500 hover:text-blue-600 font-semibold mr-4" %>
      <%= link_to "Back to projects", projects_path, class: "text-blue-500 hover:text-blue-600 font-semibold" %>
    </div>

    <%= button_to "Destroy this project", @project, method: :delete, data: { confirm: 'Are you sure?' }, class: "px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded" %>
  </div>
</div>
